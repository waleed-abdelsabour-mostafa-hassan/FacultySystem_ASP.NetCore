@model List<Department>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}


<div class="container py-4">
    <h1>Show All Departments</h1>
<a href="/Department/New" class="btn btn-success">New Department</a>
<table class="table table-bordered table-hover" >
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>ManagerName</th>
                    <th colspan="3">Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Department item in Model)
                    {
					  <tr>
                     
                          <td> @item.Id</td>
                          <td>@item.Name</td>
                          <td>@item.ManagerName</td>
						  <td>
                            <a asp-controller="Department" asp-action="Details" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-success rounded-0">Show</a>
                          </td>
                          <td>
                            <a asp-controller="Department" asp-action="Edit" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-info rounded-0">Edit</a>
                          </td>
                          <td>
                            <a asp-controller="Department" asp-action="Delete" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-danger rounded-0" 
                            onclick="return confirm('Are sure wants to delete Department');">Delete</a>
                          </td>
					  </tr>
                    }
                </tbody>
            </table>

</div>