@model List<Trainee>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}


<div class="container py-4">
    <h1>Show All Trainee</h1>
<a href="/Trainee/New" class="btn btn-success">New Trainee</a>
<table class="table table-bordered table-hover" >
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Grade</th>
                    <th>Image</th>
                    <th>Department</th>
                    <th colspan="3">Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Trainee item in Model)
                    {
					  <tr>
                     
                          <td> @item.Id</td>
                          <td>@item.Name</td>
                          <td>@item.Address</td>
                          <td>@item.Grade</td>
                          <td><img src="/Images/@item.Image" width="150" height="100"></td>
                          <td>@item.Department.Name</td>
						  <td>
                            <a asp-controller="Trainee" asp-action="Details" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-success rounded-0">Show</a>
                          </td>
                          <td>
                            <a asp-controller="Trainee" asp-action="Edit" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-info rounded-0">Edit</a>
                          </td>
                          <td>
                            <a asp-controller="Trainee" asp-action="Delete" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-danger rounded-0" >Delete</a>
                          </td>
					  </tr>
                    }
                </tbody>
            </table>

</div>