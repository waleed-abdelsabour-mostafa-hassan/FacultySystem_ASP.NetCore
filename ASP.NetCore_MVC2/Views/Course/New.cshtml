 @model Course
@{
    ViewData["Title"] = "New";
    SelectList DeptLists = new SelectList(ViewBag.DeptList, "Id", "Name");
}

<div class="container ">
    <h1>New Course</h1>

<form method="post" asp-action="SaveNew" asp-controller="Course" >
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
     <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
     <div>
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" class="form-control" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Dept_Id"></label>
        <select asp-items="DeptLists" asp-for="Dept_Id" class="form-control">
            <option value="0">---Select Department---</option>
        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
     </div>
    <input type="submit" class="btn btn-primary" value="Create" />
</form>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
    @section scripts
    {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }