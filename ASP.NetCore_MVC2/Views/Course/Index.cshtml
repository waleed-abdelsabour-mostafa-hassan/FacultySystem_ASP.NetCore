@model List<Course>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}


<div class="container py-4">
    <h1>Show All Courses</h1>
<a href="/Course/New" class="btn btn-success">New Course</a>
<table class="table table-bordered table-hover" >
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Degree</th>
                    <th>MinDegree</th>
                    <th>Department</th>
                    <th colspan="3">Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Course item in Model)
                    {
					  <tr>
                     
                          <td> @item.Id</td>
                          <td>@item.Name</td>
                          <td>@item.Degree</td>
                          <td>@item.MinDegree</td>
                          <td>@item.Department.Name</td>
						  <td>
                            <a asp-controller="Course" asp-action="Details" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-success rounded-0">Show</a>
                          </td>
                          <td>
                            <a asp-controller="Course" asp-action="Edit" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-info rounded-0">Edit</a>
                          </td>
                          <td>
                            <a asp-controller="Course" asp-action="Delete" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-danger rounded-0"  >Delete</a>
                          </td>
					  </tr>
                    }
                </tbody>
            </table>

</div>