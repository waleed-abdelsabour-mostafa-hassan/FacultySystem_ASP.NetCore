@model Course
<div class="container">
<div class="card" style="width:400px">

    
          <div class="card-body">
            <h3> @Model.Id</h3>
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text">@Model.Degree</p>
            <p class="card-text">@Model.MinDegree</p>
            <a asp-controller="Course" asp-action="Index" 
               class="btn btn-sm btn-primary rounded-0">Back to List
           </a>
          </div>
    </div>
</div>