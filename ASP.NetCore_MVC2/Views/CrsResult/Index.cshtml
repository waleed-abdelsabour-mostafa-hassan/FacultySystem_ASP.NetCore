@model List<CrsResult>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}


<div class="container py-4">
    <h1>Show All CoursesResult</h1>
<a href="/CrsResult/New" class="btn btn-success">New CourseResult</a>
<table class="table table-bordered table-hover" >
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Trainee</th>
                    <th>Course</th>
                    <th>Degree</th>
                    <th colspan="3">Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CrsResult item in Model)
                    {
					  <tr>
                     
                          <td> @item.Id</td>
                          <td>@item.Trainee.Name</td>
                          @if(@item.Degree >=@item.Course.MinDegree)
                          {
                              <td style="background-color:green;color:black">@item.Course.Name</td>
                          }
                          else
                          {
                              <td style="background-color:red">@item.Course.Name</td>
                          }
                          
                          <td>@item.Degree</td>
						  <td>
                            <a asp-controller="CrsResult" asp-action="Details" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-success rounded-0">Show</a>
                          </td>
                          <td>
                            <a asp-controller="CrsResult" asp-action="Edit" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-info rounded-0">Edit</a>
                          </td>
                          <td>
                            <a asp-controller="CrsResult" asp-action="Delete" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-danger rounded-0" 
                            onclick="return confirm('Are sure wants to delete CourseResult');">Delete</a>
                          </td>
					  </tr>
                    }
                </tbody>
            </table>

</div>